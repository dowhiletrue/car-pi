<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="service.osmc.BTPlayer"
       name="BTPlayer"
       version="0.0.1"
       provider-name="OSMC">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
     <extension point="xbmc.service"
            library="service.py"
            start="login">
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">BTPlayer Service</summary>
        <description lang="en">Background service waitng for a paired and connected Bluetooth device to play audio via A2DP,  triggers the BTPlayer display and closes it when audio is stopped</description>
        <language>en</language>
        <platform>all</platform>
        <license>GNU GPLv2</license>
        <email></email>
        <forum></forum>
        <source>https://osmc.tv</source>
    </extension>
</addon>
